<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YandexTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back_light</item>
        <item name="colorPrimaryDark">@color/back_light</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/Blue</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.date" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blue</item>
        <item name="colorPrimaryDark">@color/back_light</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/Blue</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/Green</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LargeTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">38sp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">32sp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="Body">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="Subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

</resources>